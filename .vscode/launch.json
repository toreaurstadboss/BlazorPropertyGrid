{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Blazor Sample Client",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "run-client",
      "serverReadyAction": {
        "pattern": "Now listening on: (https?://\\S+)",
        "uriFormat": "%s/sampleeditform",
        "action": "openExternally"
      }
    },
    {
      "name": "Launch Blazor Sample Client (with debugger)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-client",
      "program": "${workspaceFolder}/BlazorPropertyGrid/SampleClient/bin/Debug/net10.0/BlazorSampleClient.dll",
      "args": [],
      "cwd": "${workspaceFolder}/BlazorPropertyGrid/SampleClient",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/sampleeditform"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/BlazorPropertyGrid/SampleClient/Pages"
      }
    }
  ]
}
