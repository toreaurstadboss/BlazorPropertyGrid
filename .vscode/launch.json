{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Blazor Sample Client",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "run-client",
      "serverReadyAction": {
        "pattern": "Now listening on: (https?://\\S+)",
        "uriFormat": "%s/sampleeditform",
        "action": "openExternally"
      }
    },
    {
      "name": "Launch Blazor Sample Client (with debugger)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-client",
      "program": "${workspaceFolder}/BlazorPropertyGrid/SampleClient/bin/Debug/net10.0/BlazorSampleClient.dll",
      "args": [],
      "cwd": "${workspaceFolder}/BlazorPropertyGrid/SampleClient",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/sampleeditform",
        "webRoot": "${workspaceFolder}/BlazorPropertyGrid/SampleClient/wwwroot"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:5001;http://localhost:5000"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/BlazorPropertyGrid/SampleClient/Pages"
      },
      "launchBrowser": {
        "enabled": true,
        "args": "${auto-detect-url}",
        "windows": {
          "command": "chrome.exe",
          "args": "--remote-debugging-port=9222 --user-data-dir=\"${workspaceFolder}/.vscode/chrome-debug\" ${auto-detect-url}"
        }
      }
    },
    {
      "name": "Launch Blazor Sample Client (Chrome Canary)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-client",
      "program": "${workspaceFolder}/BlazorPropertyGrid/SampleClient/bin/Debug/net10.0/BlazorSampleClient.dll",
      "args": [],
      "cwd": "${workspaceFolder}/BlazorPropertyGrid/SampleClient",
      "stopAtEntry": false,
      "launchBrowser": {
        "enabled": true,
        "args": "https://localhost:5001/sampleeditform",
        "windows": {
          "command": "${env:LOCALAPPDATA}\\Google\\Chrome SxS\\Application\\chrome.exe",
          "args": "--new-window --incognito https://localhost:5001/sampleeditform"
        }
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:5001;http://localhost:5000"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/BlazorPropertyGrid/SampleClient/Pages"
      }
    }
  ]
}
